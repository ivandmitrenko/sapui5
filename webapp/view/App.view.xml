<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="opensap.myapp.controller.App">
		<Carousel>
			<pages>
				<Image 		src="http://kinobar.cc/uploads/posts/2016-01/1451639056_iphone360_409811.jpg"	height="300px"/>
				<Image 		src="http://xartmanfilms.ru/uploads/posts/2016-08/1470659812_1.jpg"	height="300px"/>
			</pages>
			
		</Carousel>
		<Button
				text="Say Hello!"
				press="onShowHello"/>


		<Input
			value="{helloPanel>/recipient/name}"
			description="Hello {helloPanel>/recipient/name}"
			valueLiveUpdate="true"
			width="60%"/>

</mvc:View>
